<% include ./partials/header %>
    <div class='row'>
        <div class="col-md-12">
            <form class="form-signup" action='/register' method='POST'>
                <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>
                <label for="inputUsername" class="sr-only">Username</label>
                <input type="text" id="inputUsername" class="form-control" name="username" placeholder="username" required autofocus>
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" required>
                <label for="inputEmail" class="sr-only">E-mail</label>
                <input type="email" id="inputEmail" class="form-control" name="email" placeholder="email" required>
                <label for="inputAvatar" class="sr-only">Avatar</label>
                <input type="avatar" id="inputAvatar" class="form-control" name="avatar" placeholder="avatar url">
                <label for="inputAdminCode" class="sr-only">Admin Code</label>
                <input type="text" id="inputAdminCode" class="form-control" name="adminCode" placeholder="admin code">
                <button class="btn btn-lg btn-primary btn-block mt-2" type="submit">Sign up</button>
            </form>
            <div class="form-signup">
                <p>
                    <a class='' href='/campgrounds'>Go Back</a> 
                </p>
                <p class="mt-5 mb-3 text-muted">&copy; 2018-2019</p>
            </div>
        </div>
    </div>
<% include ./partials/footer %>